<div class="container">
    <div class="card">
        <div class="card-header bg-warning">
            <h4>Form Member</h4>
        </div>
        <div class="card-body">
            <form action="<%= targetRoute %>" method="post">
                Jenis Telur
                <input type="text" name="nama_member" id="nama_member" class="form-control" value="<%= nama_member %>" required />

                Stok
                <input type="text" name="alamat" id="alamat" class="form-control" value="<%= alamat %>" required />

                Harga
                <input type="text" name="telepon" id="telepon" class="form-control" value="<%= telepon %>" required />

                <!-- Jenis
                <select name="jenis" class="form-control" required>
